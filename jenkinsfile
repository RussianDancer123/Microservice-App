pipeline {
    agent {
        docker {
                    image 'maven:3.9.4-eclipse-temurin-17'
                }
    }

    stages {

        stage('Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn package'
                dir('ApiGateway') {
                    sh 'docker build -t api-gateway-service .'
                }
            }
        }

        stage('Run Spring Boot App') {
            steps {
                dir('docker'){
                    sh 'docker-compose up --build -d'
                }
            }
        }
    }
}