pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://your-repo-url.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn package'
                dir('ApiGateway') {
                    sh 'docker build -t api-gateway-service .'
                }
            }
        }

        stage('Run Spring Boot App') {
            steps {
                dir('docker'){
                    sh 'docker-compose up --build'
                }
            }
        }
    }
}